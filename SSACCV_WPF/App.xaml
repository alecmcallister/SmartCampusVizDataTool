<Application x:Class="SSACCV_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SSACCV_WPF"
             StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<!-- Order is important -->
				<ResourceDictionary Source="Style/Sizes.xaml"/>
				<ResourceDictionary Source="Style/Colors.xaml"/>
				<ResourceDictionary Source="Style/Fonts.xaml"/>
				<ResourceDictionary Source="Style/Icons.xaml"/>
				<ResourceDictionary Source="Style/Buttons.xaml"/>

			</ResourceDictionary.MergedDictionaries>
			
		</ResourceDictionary>

	</Application.Resources>
</Application>
